@model Kora_Today.Models.MatchTv

@{
    ViewBag.Title = "Edit Match Tvs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Match Tvs</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>MatchTv</legend>

        @Html.HiddenFor(model => model.MatchTvId)

        <div class="editor-label">
            @Html.LabelFor(model => model.MatchVideoId)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MatchVideoId)
            @Html.ValidationMessageFor(model => model.MatchVideoId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.MatchVideoName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MatchVideoName)
            @Html.ValidationMessageFor(model => model.MatchVideoName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.MatchId, "Match")
        </div>
        <div class="editor-field">
            @Html.DropDownList("MatchId", String.Empty)
            @Html.ValidationMessageFor(model => model.MatchId)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
