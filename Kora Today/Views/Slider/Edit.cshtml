@model Kora_Today.Models.Slider

@{
    ViewBag.Title = "Edit Advertisement ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Advertisement </h2>

@using (Html.BeginForm("Edit", "Slider", FormMethod.Post, new { enctype = "multipart/form-data" })) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Slider</legend>

        @Html.HiddenFor(model => model.SliderId)

        <div class="editor-label">
            @Html.LabelFor(model => model.SliderImage)
        </div>
        <div class="editor-field">
            <input id="SliderPhoto" name="SliderPhoto" type="file" />
            @Html.ValidationMessageFor(model => model.SliderImage)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.SliderLink)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SliderLink)
            @Html.ValidationMessageFor(model => model.SliderLink)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

