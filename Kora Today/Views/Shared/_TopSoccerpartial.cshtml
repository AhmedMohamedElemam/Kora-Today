@model IEnumerable<Kora_Today.Models.Player>


<link href="~/Content/bootstrap.css" rel="stylesheet" />
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Player Name")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Goals)
        </th>
        <th>
            @Html.DisplayName("Club")
        </th>
      </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PlayerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Goals)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PlayerClub)
        </td>
      </tr>
}

</table>
