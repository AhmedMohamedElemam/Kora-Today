@model Kora_Today.Models.League

@{
    ViewBag.Title = "Delete League";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete League</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>League</legend>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.LeagueName)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.LeagueName)
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.LeagueImage)
    </div>
    <div class="display-field">
      <img src="~/Uploads/@Html.DisplayFor(model => model.LeagueImage)" style="width:100px;height:100px" />
    </div>
</fieldset>
@using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}
