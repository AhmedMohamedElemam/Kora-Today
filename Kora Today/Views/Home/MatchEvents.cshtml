@model Kora_Today.Models.Match

@{
    ViewBag.Title = "Match Events";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>

.vertical-menu {
    width: 650px;
    height: 400px;
    overflow-y: auto;
    border:1px solid ; 
}

.vertical-menu div {
    margin:10px;
    background-color: whitesmoke;
    color: black;
    display: block;
    padding: 10px;
    text-decoration: none;
}

</style>

@*-----------------------------------------------------------*@
  <div style="text-align:center;margin:10px">
     <B style="color:red">@Html.DisplayFor(model => model.MatchHome)</B>
@*     <img src="~/Uploads/@Html.DisplayFor(model => model.MatchHomeImage)" style="width:50px;height:50px">*@
       <B style="margin:10px">VS</B> 
@*     <img src="~/Uploads/@Html.DisplayFor(model => model.MatchAwayImage)" style="width:50px;height:50px">*@
     <B style="color:red">@Html.DisplayFor(model => model.MatchAway)</B>
  </div>

    <h3 style="position:relative;left:255px;top:10px;color:green">Minute by Minute</h3>
<div class="vertical-menu">
    @foreach (var item in Model.MatchDetails) 
    {
            <div>
              <b>@Html.DisplayFor(model => item.MatchDetailsMinute)</b>
              <img src="~/MatchIcons/@item.MatchDetailsIcon" style="position:relative;top:7px;width:25px;height:25px;" />
              <b style="color:red">@Html.DisplayFor(model => item.MatchDetailsDesc)</b>  
           </div>
    }
</div>        
